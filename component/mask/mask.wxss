.mask {
  position: fixed;

  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.6);
}

.mask-content {
  width: 160px;
  height: 100px;
  background-color: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -80px;
  margin-top: -50px;
}

.mask-content-top {
  height: 50px;
}

.mask-content-bottom text {
  margin: 0 10px;
}
